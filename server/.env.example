# Configuración del Servidor
NODE_ENV=development
PORT=5000

# Base de Datos
MONGODB_URI=mongodb://localhost:27017/truequeapp

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambiar_en_produccion
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_muy_seguro_aqui
JWT_REFRESH_EXPIRE=30d

# Cliente
CLIENT_URL=http://localhost:3000

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Email (Nodemailer)
EMAIL_FROM=noreply@truequeapp.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion

# Redis (para cache y sesiones)
REDIS_URL=redis://localhost:6379

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Configuración de archivos
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Configuración de Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000

# Configuración de seguridad
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=tu_session_secret_muy_seguro_aqui

# APIs externas (opcional)
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key
TWILIO_ACCOUNT_SID=tu_twilio_account_sid
TWILIO_AUTH_TOKEN=tu_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de base de datos para testing
TEST_MONGODB_URI=mongodb://localhost:27017/truequeapp_test

# Configuración de producción
SENTRY_DSN=tu_sentry_dsn_para_monitoreo_de_errores